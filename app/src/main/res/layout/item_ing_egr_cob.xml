<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/black"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/textFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:text="dd/MM/yyyy"
                    android:fontFamily="@font/overpass_bold"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/textDia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:text="lunes"
                    android:fontFamily="@font/overpass_bold"
                     android:textSize="10sp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/textHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:text="HH:mm"
                    android:textAlignment="textEnd"
                    android:fontFamily="@font/overpass_bold"
                     android:textSize="10sp"
                    android:textColor="#DFFFFFFF"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/textImporte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:text="$0"
                    android:fontFamily="@font/overpass_bold"
                    android:textSize="10sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/textFormaPago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:text="forma pago"
                    android:fontFamily="@font/overpass_bold"
                     android:textSize="10sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textComentario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:text="comentario"
                    android:fontFamily="@font/overpass_bold"
                     android:textSize="10sp"
                    android:textColor="#9A000000"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearDatos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/textDNI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:text="42754707"
                    android:fontFamily="@font/overpass_bold"
                    android:textSize="10sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/textNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:text="Apellido, Nombre"
                    android:fontFamily="@font/overpass_bold"
                    android:textSize="10sp"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>