<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1000000"
    android:id="@+id/linearMain"
    android:orientation="horizontal"
    tools:context=".ArqueoActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:cardMaxElevation="30dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"
            android:orientation="vertical"
            android:gravity="center">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_weight="9.9"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="3dp"
                    android:elevation="10dp"
                    app:cardMaxElevation="30dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/overpass_bold"
                            android:gravity="center"
                            android:text="ARQUEO DE CAJA"
                            app:autoSizeTextType="uniform"
                            android:textColor="#000000"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            app:cardCornerRadius="3dp"
                            android:elevation="10dp"
                            app:cardMaxElevation="30dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardFecha"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    app:cardBackgroundColor="#E1000000"
                                    android:layout_weight="1"
                                    android:elevation="10dp"
                                    app:cardMaxElevation="30dp"
                                    app:cardCornerRadius="3dp">
                                    <TextView
                                        android:id="@+id/textFecha"
                                        android:layout_margin="3dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/overpass_bold"
                                        android:gravity="center"
                                        android:text="dd/MM/yyyy"
                                        android:textColor="#FFFFFF"
                                        app:autoSizeTextType="uniform"/>
                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:textAlignment="textEnd"
                                        android:text="Efectivo:"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>
                                    <TextView
                                        android:id="@+id/textEfectivo"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:gravity="center"
                                        android:inputType="phone"
                                        android:text="$0"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:textAlignment="textEnd"
                                        android:text="Efectivo Real:"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>
                                    <EditText
                                        android:id="@+id/textEfectivoReal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:gravity="center"
                                        android:inputType="number"
                                        android:singleLine="true"
                                        android:hint="$0"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:textAlignment="textEnd"
                                        android:text="Credito:"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>
                                    <TextView
                                        android:id="@+id/textCredito"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:gravity="center"
                                        android:inputType="phone"
                                        android:text="$0"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:textAlignment="textEnd"
                                        android:text="Debito:"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>
                                    <TextView
                                        android:id="@+id/textDebito"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:gravity="center"
                                        android:inputType="phone"
                                        android:text="$0"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:textAlignment="textEnd"
                                        android:text="Transferencia:"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>
                                    <TextView
                                        android:id="@+id/textTransferencia"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:gravity="center"
                                        android:inputType="phone"
                                        android:text="$0"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:textAlignment="textEnd"
                                        android:text="Gastos:"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>
                                    <TextView
                                        android:id="@+id/textGastos"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:gravity="center"
                                        android:inputType="phone"
                                        android:text="$0"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/textTotal"
                                        android:layout_margin="5dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:gravity="center"
                                        android:text="TOTAL: $0"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.9"
                                        android:fontFamily="@font/overpass_bold"
                                        android:gravity="center"
                                        android:text="Comentario:"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>

                                    <EditText
                                        android:id="@+id/textComentario"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:gravity="center"
                                        android:hint="comentario"
                                        android:singleLine="true"
                                        android:textColor="#000000"
                                        app:autoSizeTextType="uniform" />
                                </LinearLayout>
                                <TextView
                                    android:layout_margin="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </ScrollView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardGuardarArqueo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:elevation="10dp"
                app:cardMaxElevation="30dp"
                app:cardCornerRadius="3dp">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass_bold"
                    android:gravity="center"
                    android:text="Guardar"
                    app:autoSizeTextType="uniform"
                    android:textColor="#000000"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1.9"
        android:elevation="10dp"
        app:cardBackgroundColor="#1B000000"
        app:cardMaxElevation="30dp">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:cardMaxElevation="30dp"
        app:cardCornerRadius="3dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/black"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                app:cardCornerRadius="3dp"
                android:elevation="10dp"
                app:cardMaxElevation="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="#E1000000"
                        android:elevation="10dp"
                        app:cardMaxElevation="30dp"
                        app:cardCornerRadius="3dp">
                        <TextView
                            android:id="@+id/textFechaDesde"
                            android:layout_margin="3dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/overpass_bold"
                            android:gravity="center"
                            android:text="dd/MM/yyyy"
                            android:textColor="#FFFFFF"
                            app:autoSizeTextType="uniform"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="#E1000000"
                        android:elevation="10dp"
                        app:cardMaxElevation="30dp"
                        app:cardCornerRadius="3dp">
                        <TextView
                            android:id="@+id/textFechaHasta"
                            android:layout_margin="3dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/overpass_bold"
                            android:gravity="center"
                            android:text="dd/MM/yyyy"
                            android:textColor="#FFFFFF"
                            app:autoSizeTextType="uniform"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardTodos"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="#E1000000"
                        android:elevation="10dp"
                        app:cardMaxElevation="30dp"
                        app:cardCornerRadius="3dp">
                        <TextView
                            android:layout_margin="3dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/overpass_bold"
                            android:gravity="center"
                            android:text="Todos"
                            android:textColor="#FFFFFF"
                            app:autoSizeTextType="uniform"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="3dp"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="10dp"
                    app:cardMaxElevation="30dp"
                    app:cardCornerRadius="3dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerArqueos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>