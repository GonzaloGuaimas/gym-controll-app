<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1000000"
    android:id="@+id/linearMain"
    android:orientation="horizontal"
    tools:context=".CobrarActividad">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:cardMaxElevation="30dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"
            android:orientation="vertical"
            android:gravity="center">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_weight="9.9"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="20dp"
                app:cardCornerRadius="3dp"
                android:elevation="10dp"
                app:cardMaxElevation="30dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/overpass_bold"
                            android:gravity="center"
                            android:text="COBRO DE ARANCEL"
                            app:autoSizeTextType="uniform"
                            android:textColor="#000000"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/overpass_bold"
                                android:gravity="center"
                                android:text="DNI"
                                app:autoSizeTextType="uniform"
                                android:textColor="#000000"/>
                            <EditText
                                android:id="@+id/textDNIBusqueda"
                                android:singleLine="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/overpass_bold"
                                android:gravity="center"
                                android:textColorHint="#A1191919"
                                android:hint="dni"
                                android:inputType="number"
                                app:autoSizeTextType="uniform"
                                android:textColor="#000000"/>
                        </LinearLayout>


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            app:cardBackgroundColor="#E1000000"
                            app:cardCornerRadius="5dp"
                            android:elevation="10dp"
                            app:cardMaxElevation="30dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/textNombre"
                                    android:layout_margin="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/overpass_bold"
                                    android:gravity="center"
                                    android:text="Apellido ,Nombre"
                                    app:autoSizeTextType="uniform"
                                    android:textColor="#FFFFFF"/>
                                <TextView
                                    android:id="@+id/textDNI"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/overpass_bold"
                                    android:gravity="center"
                                    android:text="DNI: 00000000"
                                    app:autoSizeTextType="uniform"
                                    android:textColor="#FFFFFF"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:gravity="center"
                                        android:text="Saldo:"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#FFFFFF"/>
                                    <TextView
                                        android:id="@+id/textSaldo"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:gravity="center"
                                        android:text="$0"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#FFD500"/>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_margin="3dp"
                            app:cardCornerRadius="5dp"
                            android:elevation="10dp"
                            app:cardMaxElevation="30dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:gravity="center"
                                        android:text="Fecha:"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>
                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cardFecha"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        app:cardBackgroundColor="#E1000000"
                                        android:layout_weight="1"
                                        android:elevation="10dp"
                                        app:cardMaxElevation="30dp"
                                        app:cardCornerRadius="3dp">
                                        <TextView
                                            android:id="@+id/textFecha"
                                            android:layout_margin="3dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:fontFamily="@font/overpass_bold"
                                            android:gravity="center"
                                            android:text="dd/MM/yyyy"
                                            android:textColor="#FFFFFF"
                                            app:autoSizeTextType="uniform"/>
                                    </androidx.cardview.widget.CardView>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:gravity="center"
                                        android:text="Hora:"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>
                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cardHora"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        app:cardBackgroundColor="#E1000000"
                                        android:layout_weight="1"
                                        android:elevation="10dp"
                                        app:cardMaxElevation="30dp"
                                        app:cardCornerRadius="3dp">
                                        <TextView
                                            android:id="@+id/textHora"
                                            android:layout_margin="3dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:fontFamily="@font/overpass_bold"
                                            android:gravity="center"
                                            android:text="HH:mm:ss"
                                            android:textColor="#FFFFFF"
                                            app:autoSizeTextType="uniform"/>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:gravity="center"
                                        android:text="Importe:"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>
                                    <EditText
                                        android:id="@+id/textImporte"
                                        android:singleLine="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:gravity="center"
                                        android:inputType="number"
                                        android:hint="$"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:gravity="center"
                                        android:text="Forma Pago:"
                                        android:textColor="#000000"
                                        app:autoSizeTextType="uniform" />
                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cardFormaPago"
                                        android:layout_weight="1"
                                        android:layout_margin="3dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:elevation="10dp"
                                        app:cardMaxElevation="30dp"
                                        app:cardCornerRadius="3dp">
                                        <TextView
                                            android:layout_margin="5dp"
                                            android:id="@+id/textFormaPago"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/overpass_bold"
                                            android:gravity="center"
                                            android:text="Selec Forma"
                                            android:textColor="#000000"
                                            app:autoSizeTextType="uniform" />
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.9"
                                        android:fontFamily="@font/overpass_bold"
                                        android:gravity="center"
                                        android:text="Comentario:"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>
                                    <EditText
                                        android:id="@+id/textComentario"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:gravity="center"
                                        android:singleLine="true"
                                        android:hint="comentario"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>
                                </LinearLayout>

                                <TextView
                                    android:layout_margin="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

            </androidx.cardview.widget.CardView>

        </ScrollView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCobrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:elevation="10dp"
                app:cardMaxElevation="30dp"
                app:cardCornerRadius="3dp">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass_bold"
                    android:gravity="center"
                    android:text="Cobrar"
                    app:autoSizeTextType="uniform"
                    android:textColor="#000000"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1.9"
        android:elevation="10dp"
        app:cardBackgroundColor="#1B000000"
        app:cardMaxElevation="30dp">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:cardMaxElevation="30dp"
        app:cardCornerRadius="3dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/black"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                app:cardCornerRadius="3dp"
                android:elevation="10dp"
                app:cardMaxElevation="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:fontFamily="@font/overpass_bold"
                        app:autoSizeTextType="uniform"
                        android:textSize="12dp"
                        android:textAlignment="viewStart"
                        android:textColor="#000000"/>
                    <SearchView
                        android:layout_weight="1"
                        android:id="@+id/searchView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:autoSizeTextType="uniform"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardTodos"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="#E1000000"
                        android:elevation="10dp"
                        app:cardMaxElevation="30dp"
                        app:cardCornerRadius="3dp">
                        <TextView
                            android:layout_margin="3dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/overpass_bold"
                            android:gravity="center"
                            android:text="Todos"
                            android:textColor="#FFFFFF"
                            app:autoSizeTextType="uniform"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="3dp"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="10dp"
                    app:cardMaxElevation="30dp"
                    app:cardCornerRadius="3dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerCobros"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>