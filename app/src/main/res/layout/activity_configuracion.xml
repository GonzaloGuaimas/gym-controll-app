<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1000000"
    android:id="@+id/linearMain"
    android:orientation="horizontal"
    tools:context=".ConfiguracionActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:cardMaxElevation="30dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/black"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:elevation="10dp"
                android:orientation="vertical"
                app:cardCornerRadius="3dp"
                app:cardMaxElevation="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/overpass_bold"
                        android:gravity="center"
                        android:text="ACTIVIDADES"
                        android:textColor="#000000"
                        app:autoSizeTextType="uniform" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/overpass_bold"
                            android:gravity="center"
                            android:text="Nombre:"
                            android:textColor="#000000"
                            app:autoSizeTextType="uniform" />

                        <EditText
                            android:id="@+id/textNombreActividad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:fontFamily="@font/overpass_bold"
                            android:gravity="center"
                            android:hint="actividad"
                            android:textColor="#000000"
                            android:textColorHint="#A1191919"
                            app:autoSizeTextType="uniform" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/overpass_bold"
                            android:gravity="center"
                            android:text="Precio:"
                            android:textColor="#000000"
                            app:autoSizeTextType="uniform" />

                        <EditText
                            android:id="@+id/textPrecioActividad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:fontFamily="@font/overpass_bold"
                            android:gravity="center"
                            android:hint="0"
                            android:inputType="number"
                            android:textColor="#000000"
                            android:textColorHint="#A1191919"
                            app:autoSizeTextType="uniform" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardAgregarActividad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="3dp"
                        app:cardMaxElevation="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/overpass_bold"
                            android:gravity="center"
                            android:text="agregar"
                            android:textColor="#000000"
                            app:autoSizeTextType="uniform" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/black"
                        android:elevation="10dp"
                        android:orientation="vertical"
                        app:cardCornerRadius="3dp"
                        app:cardMaxElevation="30dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerActividades"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1.9"
        android:elevation="10dp"
        app:cardBackgroundColor="#1B000000"
        app:cardMaxElevation="30dp">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:cardMaxElevation="30dp"
        app:cardCornerRadius="3dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="3dp"
                android:layout_margin="2dp"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/black"
                app:cardMaxElevation="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BackUp de Datos"
                        android:textColor="@color/white"
                        app:autoSizeTextType="uniform"
                        android:fontFamily="@font/overpass_bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardExportar"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="3dp"
                            app:cardBackgroundColor="@color/white"
                            android:elevation="10dp"
                            app:cardMaxElevation="30dp"
                            app:cardCornerRadius="3dp">
                            <TextView
                                android:layout_margin="3dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/overpass_bold"
                                android:gravity="center"
                                android:text="Exportar"
                                android:textColor="@color/black"
                                app:autoSizeTextType="uniform"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardImportar"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginTop="3dp"
                            app:cardBackgroundColor="@color/white"
                            android:elevation="10dp"
                            app:cardMaxElevation="30dp"
                            app:cardCornerRadius="3dp">
                            <TextView
                                android:layout_margin="3dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/overpass_bold"
                                android:gravity="center"
                                android:text="Importar"
                                android:textColor="@color/black"
                                app:autoSizeTextType="uniform"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/textInformacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        app:autoSizeTextType="uniform"
                        android:fontFamily="@font/overpass_bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BackUp Automatico"
                            android:textColor="@color/white"
                            app:autoSizeTextType="uniform"
                            android:fontFamily="@font/overpass_bold"/>

                        <CheckBox
                            android:id="@+id/checkBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:buttonTint="@color/white"
                            android:text="Activado"
                            android:textColor="#FFFFFF"/>

                    </LinearLayout>




                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardRedes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/black"
                app:cardMaxElevation="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Desarrollado por"
                        android:layout_marginRight="5dp"
                        app:autoSizeTextType="uniform"
                        android:textColor="@color/white"
                        android:fontFamily="@font/overpass_bold"/>
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:background="@drawable/omega_blanco"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/instagram"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="omega-si"
                        app:autoSizeTextType="uniform"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:fontFamily="@font/overpass_bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="toca para visitar"
                        android:textSize="10dp"
                        android:textColor="#8BFFFFFF"
                        android:fontFamily="@font/overpass_bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>