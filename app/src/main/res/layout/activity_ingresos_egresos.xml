<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1000000"
    android:id="@+id/linearMain"
    android:orientation="horizontal"
    tools:context=".IngresosEgresosActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:cardMaxElevation="30dp"
        app:cardCornerRadius="3dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"
            android:orientation="vertical"
            android:gravity="center">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_weight="10"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="3dp"
                    android:elevation="10dp"
                    app:cardMaxElevation="30dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/overpass_bold"
                            android:gravity="center"
                            android:text="INGRESOS y EGRESOS"
                            app:autoSizeTextType="uniform"
                            android:textColor="#000000"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/overpass_bold"
                                android:gravity="center"
                                android:text="Selec Tipo:"
                                app:autoSizeTextType="uniform"
                                android:textColor="#000000"/>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardEgresoIngresoSelec"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:elevation="10dp"
                                android:layout_margin="5dp"
                                app:cardMaxElevation="30dp"
                                app:cardCornerRadius="3dp">
                                <TextView
                                    android:layout_margin="5dp"
                                    android:id="@+id/textSelector"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/overpass_bold"
                                    android:gravity="center"
                                    android:text="Egreso/Ingreso"
                                    android:textColor="#000000"
                                    app:autoSizeTextType="uniform" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_margin="3dp"
                            app:cardCornerRadius="3dp"
                            android:elevation="10dp"
                            app:cardMaxElevation="30dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:gravity="center"
                                        android:text="Importe:"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>
                                    <EditText
                                        android:id="@+id/textImporte"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:singleLine="true"
                                        android:gravity="center"
                                        android:inputType="number"
                                        android:hint="$"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:gravity="center"
                                        android:text="Forma Pago:"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>
                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cardFormaPago"
                                        android:layout_weight="1"
                                        android:layout_margin="5dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:elevation="10dp"
                                        app:cardMaxElevation="30dp"
                                        app:cardCornerRadius="3dp">
                                        <TextView
                                            android:id="@+id/textFormaPago"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/overpass_bold"
                                            android:gravity="center"
                                            android:text="Selec Forma"
                                            android:textColor="#000000"
                                            app:autoSizeTextType="uniform" />
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.9"
                                        android:fontFamily="@font/overpass_bold"
                                        android:gravity="center"
                                        android:text="Comentario:"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>
                                    <EditText
                                        android:id="@+id/textComentario"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/overpass_bold"
                                        android:gravity="center"
                                        android:singleLine="true"
                                        android:hint="comentario"
                                        app:autoSizeTextType="uniform"
                                        android:textColor="#000000"/>
                                </LinearLayout>
                                <TextView
                                    android:layout_margin="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </ScrollView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:elevation="10dp"
                app:cardMaxElevation="30dp"
                app:cardCornerRadius="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:fontFamily="@font/overpass_bold"
                            android:text="EFE"
                            android:textColor="#000000"
                             app:autoSizeTextType="uniform" />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:text="DEB"
                            android:fontFamily="@font/overpass_bold"
                             app:autoSizeTextType="uniform"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:text="CRE"
                            android:fontFamily="@font/overpass_bold"
                             app:autoSizeTextType="uniform"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:text="TRA"
                            android:fontFamily="@font/overpass_bold"
                             app:autoSizeTextType="uniform"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:text="GAS"
                            android:fontFamily="@font/overpass_bold"
                             app:autoSizeTextType="uniform"
                            android:textColor="#000000"/>
                        <TextView
                            android:background="@color/black"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TOTAL"
                            android:fontFamily="@font/overpass_bold"
                             app:autoSizeTextType="uniform"
                            android:textColor="#FFFFFF"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/textEfectivo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:fontFamily="@font/overpass_bold"
                            android:text="0"
                            android:textColor="#000000"
                             app:autoSizeTextType="uniform" />
                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/textDebito"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:text="0"
                            android:fontFamily="@font/overpass_bold"
                             app:autoSizeTextType="uniform"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/textCredito"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:text="0"
                            android:fontFamily="@font/overpass_bold"
                             app:autoSizeTextType="uniform"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/textTransferencia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:text="0"
                            android:fontFamily="@font/overpass_bold"
                             app:autoSizeTextType="uniform"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/textGastos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:text="0"
                            android:fontFamily="@font/overpass_bold"
                             app:autoSizeTextType="uniform"
                            android:textColor="#000000"/>
                        <TextView
                            android:background="@color/black"
                            android:layout_weight="1"
                            android:id="@+id/textTotal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:fontFamily="@font/overpass_bold"
                             app:autoSizeTextType="uniform"
                            android:textColor="#FFFFFF"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardGuardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:elevation="10dp"
                app:cardMaxElevation="30dp"
                app:cardCornerRadius="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/overpass_bold"
                    android:gravity="center"
                    android:text="Guardar"
                    android:textColor="#000000"
                    app:autoSizeTextType="uniform" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1.9"
        app:cardBackgroundColor="#1B000000"
        android:elevation="10dp"
        app:cardMaxElevation="30dp">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/black"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:cardMaxElevation="30dp"
        app:cardCornerRadius="3dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                app:cardCornerRadius="3dp"
                android:elevation="10dp"
                app:cardMaxElevation="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <SearchView
                        android:layout_weight="10"
                        android:id="@+id/searchView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:autoSizeTextType="uniform"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="#E1000000"
                        android:elevation="10dp"
                        app:cardMaxElevation="30dp"
                        app:cardCornerRadius="3dp">
                        <TextView
                            android:id="@+id/textFecha"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/overpass_bold"
                            android:gravity="center"
                            android:text="dd/MM/yyyy"
                            android:textColor="#FFFFFF"
                            app:autoSizeTextType="uniform"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardFechaHasta"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="#E1000000"
                        android:elevation="10dp"
                        app:cardMaxElevation="30dp"
                        app:cardCornerRadius="3dp">
                        <TextView
                            android:id="@+id/textFechaHasta"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/overpass_bold"
                            android:gravity="center"
                            android:text="dd/MM/yyyy"
                            android:textColor="#FFFFFF"
                            app:autoSizeTextType="uniform"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardMes"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="#E1000000"
                        android:elevation="10dp"
                        app:cardMaxElevation="30dp"
                        app:cardCornerRadius="3dp">
                        <TextView
                            android:id="@+id/textMes"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/overpass_bold"
                            android:gravity="center"
                            android:text="mes"
                            android:textColor="#FFFFFF"
                            app:autoSizeTextType="uniform"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardAño"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="#E1000000"
                        android:elevation="10dp"
                        app:cardMaxElevation="30dp"
                        app:cardCornerRadius="3dp">
                        <TextView
                            android:id="@+id/textAño"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/overpass_bold"
                            android:gravity="center"
                            android:text="año"
                            android:textColor="#FFFFFF"
                            app:autoSizeTextType="uniform"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardTodos"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="#E1000000"
                        android:elevation="10dp"
                        app:cardMaxElevation="30dp"
                        app:cardCornerRadius="3dp">
                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/overpass_bold"
                            android:gravity="center"
                            android:text="Todos"
                            android:textColor="#FFFFFF"
                            app:autoSizeTextType="uniform"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="3dp"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="10dp"
                    app:cardMaxElevation="30dp"
                    app:cardCornerRadius="3dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerIngresosEgresos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>