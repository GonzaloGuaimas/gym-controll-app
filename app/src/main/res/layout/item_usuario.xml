<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardCornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="Apellido, Nombre"
                    android:fontFamily="@font/overpass_bold"
                    android:textSize="12sp"
                    android:textColor="#000000"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="3dp"
                    android:elevation="10dp"
                    app:cardMaxElevation="30dp">
                    <ImageView
                        android:id="@+id/imageFoto"
                        android:layout_margin="2dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                </androidx.cardview.widget.CardView>



                <TextView
                    android:id="@+id/textDNI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="DNI: 42754707"
                    android:fontFamily="@font/overpass_bold"
                    android:textSize="12sp"
                    android:textColor="#000000"/>
            </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#E1000000"
                    app:cardCornerRadius="3dp"
                    android:elevation="10dp"
                    app:cardMaxElevation="30dp">
                    <TextView
                        android:id="@+id/textCondicion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/overpass_bold"
                        android:text="Condicion | Pesas3"
                        android:textColor="#FFFFFF"
                        app:autoSizeTextType="uniform" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textFechaInscr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="InscripciÃ³n: dd/MM/yyyy"
                    android:fontFamily="@font/overpass_bold"
                    android:textSize="10sp"
                    app:autoSizeTextType="uniform"
                    android:textColor="#B0000000"/>
                <TextView
                    android:id="@+id/textFechaVencimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="Vencimiento: dd/MM/yyyy"
                    android:fontFamily="@font/overpass_bold"
                    app:autoSizeTextType="uniform"
                    android:textColor="#B0000000"/>
                <TextView
                    android:id="@+id/textTelefono"
                    android:layout_width="match_parent"
                    android:textSize="10sp"
                    android:layout_height="wrap_content"
                    android:text="Tel: 3874646037"
                    android:fontFamily="@font/overpass_bold"
                    app:autoSizeTextType="uniform"
                    android:textColor="#B0000000"/>
                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="3dp"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="#E1000000"
                    android:elevation="10dp"
                    app:cardMaxElevation="30dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/textEstado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:fontFamily="@font/overpass_bold"
                            android:text="Estado"
                            android:textColor="#FFFFFF"
                            android:textAlignment="center"
                            app:autoSizeTextType="uniform" />
                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/textSaldo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:fontFamily="@font/overpass_bold"
                            android:text="Saldo: $0"
                            android:textColor="#FFFFFF"
                            android:textAlignment="center"
                            app:autoSizeTextType="uniform" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>